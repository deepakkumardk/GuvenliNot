<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="AppTheme.MaterialAboutActivity" parent="Theme.Mal.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorLink">@android:color/background_light</item>
    </style>
    <style name="TitleEditText" parent="EditTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ContentEditText" parent="EditTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="DateText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>